<% include ./partials/header.ejs %>
<link rel="stylesheet" href="/css/userprofile.css">
</head>

<body>
    <% include ./partials/navbar.ejs %>
    <% if (name == 'admin@admin') { %> <!-- CHANGE_THIS -->
        <div style="background: rgba(255, 255, 255, 0.322);" class="container mt-5 py-2">
                <table class="table table-striped ">
                        <thead>
                          <tr>
                            <th scope="col">Όνομα</th>
                            <th scope="col">Τιμή</th>
                            <th scope="col">Κατάστημα</th>
                            <th scope="col"></th>
                          </tr>
                        </thead>
                        <tbody>
                        <% prices.forEach((price, index) => { %>
                            <tr>
                                <th scope="row"> <a href='/item/<%= price.productid %>'><%= price.productName %></a></th>
                                <% if (prices.checked == 1) { %>
                                <td><%= price.productPrice %></td>
                                <% } else { %>
                                <td><%= price.price %></td>      
                                <% } %>                          
                                <td><%= price.shopName %></td>
                                <td>                                
                                <form  action="/adminPage/DeletePrice/<%= price.id %>" method = "POST">
                                    <button  type="submit" onclick="return confirm('Είσαι σίγουρος ότι θέλεις να διαγράψεις την προσφορα: <%= price.productName %> του καταστήματος <%= price.shopName %> ?')" class='btn btn-danger btn-block'>Διαγραφή Προσφοράς</button>
                                </form>
                            </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>    
                        <a type="button" class="btn btn-primary btn-block" href='/adminPage'>Προφίλ</a>
        </div>  
    <% } else { %>
        <div class=' text-center'>Η σελίδα δεν βρέθηκε, πάτα <a href='/'>εδώ</a> για να μεταφερθείς στην αρχική σελίδα</div>
    <% } %> 
    </div>
</body>