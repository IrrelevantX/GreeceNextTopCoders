<% include ./partials/header.ejs %>
</head>

<body style='background-color:blanchedalmond'>
    <% include ./partials/navbar.ejs %>
    <div class="container mt-5">
        <div class='jumbotron'>
            <div class='container'>
                <div class='row p-5'>
                    <div class='col-md-4 text-center'>
                        <img src="/assets/profileImg/<%= user.image %>" style="max-width: 100%; max-height: 100%;">
                    </div>
                    <div class='col-md-8 pt-1'>
                        <div class='row pt-4 alert alert-info'>
                            <div class='col-md-6'>
                                User email:
                            </div>
                            <div class='col-md-6'>
                                <%= user.email %>
                            </div>
                        </div>
                    </div>
                </div>
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-group row">
                        <div class="col-lg-12">

                            <h3>Αλλαγή Φωτογραφίας </h3>

                            <input type="file" name="image" accept="image/*">

                        </div>
                    </div>
                    <h3> Αλλαγή Κωδικού </h3>
                    <div class="form-group row">
                        <div class="col-md-6">

                            <input type="password" name="password" class='class form-control ' placeholder="Αλλαγή κωδικού">
                        </div>
                        <div class="col-md-6">

                            <input type="password" name="passwordconf" class='class form-control ' placeholder="Επαλήθευση κωδικού">
                        </div>

                    </div>
                    <div class="form-group row">
                        <button type="submit" class="btn btn-primary btn-block" ng-disabled="SubmitButton">Αποθήκευση</button>
                    </div>
                </form>
                <div class="form-group row">

                    <a href="../delete/?user=<%= user.email %>" button class='btn btn-danger btn-block'>Διαγραφή
                        λογαριασμού</button></a>

                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Προιόν</th>
                            <th scope="col">Τιμή</th>
                            <th scope="col">Κατάστημα</th>
                            <th scope="col"></th>

                        </tr>
                        </thread>
                    <tbody>
                        <!-- INSERT STUFF FROM DB HERE LAD !-->
                        <% Usrproducts.forEach((UsrProduct, index) => { %>
                        <tr>
                            <th><%= UsrProduct.productName %></th>
                            <th><%= UsrProduct.price %></th>
                            <th><%= UsrProduct.shopname %></th>
                            <th>
                                <a href="/shopPage/<%= UsrProduct.shopid %>" rel="noopener" class="btn btn-sm btn-success">Σελίδα Καταστήματος</a>
                             </th>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
</body>