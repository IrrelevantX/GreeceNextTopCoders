<% include ./partials/header.ejs %>
</head>
<body>
    <% include ./partials/navbar.ejs %>
    <div class="container">
    <form action="/search/output" method="POST"> 
        <div class="form-row text-center">
                <div class='col-sm-12'>
                    <p class='lead'> Διάλεξε τις κατηγορίες που σε ενδιαφέρουν </p>
                </div>           
        </div>   
        <div class="form-row">   
            <div class="col-sm-4">
                <div class="btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info btn-block">
                          <input type="checkbox" name="check[]" value="near" > κοντά μου
                    </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-outline-info btn-block ">
                              <input type="checkbox" name="check[]" value="Φαγητό" > Φαγητό
                        </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info btn-block">
                          <input type="checkbox" name="check[]" value="Καφετέριες" > Καφετέριες
                    </label>
                </div>
            </br>
            </div>
            <div class="col-sm-4">
                <div class="btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info btn-block ">
                          <input type="checkbox" name="check[]" value="Σινεμά" > Σινεμά
                    </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-outline-info btn-block ">
                              <input type="checkbox" name="check[]" value="Μουσική" > Μουσική
                        </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info btn-block ">
                          <input type="checkbox" name="check[]" value="Ποτό" > Ποτό
                    </label>
                </div>
            </div>  
            <div class="col-sm-4">
                <div class="btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-outline-info btn-block ">
                          <input type="checkbox" name="check[]" value="Θέατρο" > Θέατρο
                    </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-outline-info btn-block">
                              <input type="checkbox" name="check[]" value="Μετακίνηση" > Μεταφορές
                        </label>
                </div>
            </br>
                <div class="btn-group-toggle" data-toggle="buttons">
                 <label class="btn btn-outline-info btn-block ">
                          <input type="checkbox" name="check[]" value="Τεχνολογία" > Τεχνολογία
                    </label>
                </div>
            </br>
            </div>
        </div>
    </br>
        <div class="form-row text-center">
                <div class='col-sm-12'>
                    <p class='lead'> Εύρος Τιμών </p>
                </div>           
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Από</label>
                    <input type="number" step="5" min="0" name="from" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>Έως</label>
                    <input type="number" step="5" min="0" name="to" class="form-control">
            </div>
        </div>
        <div class="form-row text-center">
            <div class='col-sm-12'>
                <p class='lead'> Ή δώσε μας μερικές λέξεις - κλειδιά </p>
            </div>           
        </div>
        <div class="form-group">
            <input type="general-search" class="form-control" name="search" id='general-search' placeholder="Αναζήτηση . . .">
        </div>
        <div class="form-row text-center">
            <div class='col-sm-12'>    
                <button type="submit" class="btn btn-info mb-2 "> Ψάξε!</button>
            </div>
        </div>   
    </form>
    </div>
</body>